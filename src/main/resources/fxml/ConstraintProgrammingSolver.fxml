<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="solverBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/ConstraintProgrammingSolver.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="%menu.help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="%menu.help.about" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <TabPane fx:id="problemsTabPane" side="LEFT">
            <tabs>
                <Tab fx:id="trucks" closable="false" text="%tab.trucks">
                    <content>
                        <fx:include source="TrucksProblemView.fxml" />
                    </content>
                </Tab>
                <Tab fx:id="jobshop" closable="false" text="%tab.jobshop">
                    <content>
                        <fx:include fx:id="jobShopProblem" source="JobShopProblem.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <bottom>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="%label.time" />
              <ProgressBar fx:id="computationProgressBar" maxWidth="1.7976931348623157E308" prefWidth="200.0" progress="0.0" GridPane.columnIndex="2" />
            <Label fx:id="timeLabel" GridPane.columnIndex="1" />
         </children>
      </GridPane>
    </bottom>
   <right>
      <Button fx:id="startButton" mnemonicParsing="false" text="%button.start" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
